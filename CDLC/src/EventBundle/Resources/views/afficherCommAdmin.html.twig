{% extends 'base1.html.twig' %}
{% block body %}


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Data Tables
                    <small>advanced tables</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Tables</a></li>
                    <li class="active">Data tables</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Hover Data Table</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th>Contenu</th>
                                        <th>Date</th>
                                        <th>Owner</th>
                                        <th>Status</th>
                                        <th>Event</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for com in listecom %}
                                    <tr>
                                        <td>{{ com.contenu }}</td>
                                        <td>{{ com.getDate()|date('Y-m-d H:i:s') }}</td>
                                        <td>{{ com.owner }}</td>
                                        <td>{{ com.status }}</td>
                                        <td>{{ com.idEvent.titre }}</td>
                                        <td><a href="{{ path('SupprimerComm',{'id':com.id}) }}">Supprimer</a></td>
                                        <td><a href="{{ path('modifierStatusComm',{'id':com.id}) }}">ChangeStatus</a></td>

                                    </tr>

                                    {% endfor %}
                                    </tbody>


                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->


                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->


    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging'      : true,
                'lengthChange': false,
                'searching'   : false,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : false
            })
        })
    </script>
{% endblock %}