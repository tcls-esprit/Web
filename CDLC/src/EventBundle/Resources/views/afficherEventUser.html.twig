                                <h3><a href="{{ path('detailEvent',{'id':event.id}) }}">{{ event.titre }}</a></h3>

                                <span class="time"></span>
                                <p>{{ event.description }}</p>

                                    <h3><a href="{{ path('modifierevent',{'id':event.id}) }}">Modifier</a></h3>
                                    <h3><a href="{{ path('supprimerevent',{'id':event.id}) }}">Supprimer</a></h3>
                                    <p><h3>Etat: </h3> <h4>{{ event.etat }}</h4></p>


                            </div>
                        </div>
                    {% endfor %}

                    <ul class="pagination">
